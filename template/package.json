{
  "name": "BaseRN",
  "version": "0.0.1",
  "private": true,
  "scripts": {
    "android": "react-native run-android",
    "ios": "react-native run-ios --simulator='iPhone 12 Pro'",
    "start": "react-native start",
    "test": "jest",
    "lint": "eslint . --ext .js,.jsx,.ts,.tsx",
    "set:env:debug": "node ./scripts/set-env.js --env debug",
    "set:env:staging": "node ./scripts/set-env.js --env staging",
    "set:env:release": "node ./scripts/set-env.js --env release",
    "run:android:debug": "yarn set:env:debug && yarn android --variant debug",
    "run:android:staging": "yarn set:env:staging && yarn android --variant staging",
    "run:android:release": "yarn set:env:release && yarn android --variant release",
    "run:ios:debug": "yarn set:env:debug && yarn ios --configuration Debug",
    "run:ios:staging": "yarn set:env:staging && yarn ios --configuration Staging",
    "run:ios:release": "yarn set:env:release && yarn ios --configuration Release"
  },
  "dependencies": {
    "@react-native-community/async-storage": "^1.12.1",
    "@react-native-community/hooks": "^2.8.1",
    "@react-native-masked-view/masked-view": "^0.2.6",
    "@react-navigation/bottom-tabs": "^6.3.1",
    "@react-navigation/native": "^6.0.10",
    "@react-navigation/native-stack": "^6.6.2",
    "@react-navigation/stack": "^6.2.1",
    "@reduxjs/toolkit": "^1.8.2",
    "add": "^2.0.6",
    "axios": "^0.27.2",
    "i18next": "^21.8.7",
    "moment": "^2.29.3",
    "native-base": "^3.4.5",
    "ramda": "^0.28.0",
    "react": "18.0.0",
    "react-hook-form": "^7.31.3",
    "react-i18next": "^11.16.9",
    "react-native": "0.69.0",
    "react-native-gesture-handler": "^2.4.2",
    "react-native-indicators": "^0.17.0",
    "react-native-modal": "^13.0.1",
    "react-native-rename": "^2.9.0",
    "react-native-safe-area-context": "^4.2.5",
    "react-native-screens": "^3.13.1",
    "react-native-svg": "^12.3.0",
    "react-redux": "^8.0.2",
    "redux": "^4.2.0",
    "redux-immutable": "^4.0.0",
    "redux-logger": "^3.0.6",
    "redux-persist": "^6.0.0",
    "redux-saga": "^1.1.3",
    "yarn": "^1.22.18",
    "yup": "^0.32.11"
  },
  "devDependencies": {
    "@babel/core": "^7.12.9",
    "@babel/runtime": "^7.12.5",
    "@react-native-community/eslint-config": "^2.0.0",
    "@types/jest": "^26.0.23",
    "@types/ramda": "^0.28.13",
    "@types/react-native": "^0.67.3",
    "@types/react-native-indicators": "^0.16.2",
    "@types/react-test-renderer": "^17.0.1",
    "@types/redux-logger": "^3.0.9",
    "@typescript-eslint/eslint-plugin": "^5.17.0",
    "@typescript-eslint/parser": "^5.17.0",
    "babel-jest": "^26.6.3",
    "babel-plugin-module-resolver": "^4.1.0",
    "eslint": "^7.32.0",
    "jest": "^26.6.3",
    "metro-react-native-babel-preset": "^0.67.0",
    "react-test-renderer": "17.0.2",
    "typescript": "^4.4.4"
  },
  "resolutions": {
    "@types/react": "^17"
  },
  "jest": {
    "preset": "react-native",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "jsx",
      "json",
      "node"
    ]
  }
}
